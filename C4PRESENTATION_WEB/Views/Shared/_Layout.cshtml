<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Exectravel Viagens - 2025 á @DateTime.Now.Year</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/C4PRESENTATION_WEB.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo_exectravel.png" />
                </a> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="font-size: 25px;">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="color: #2c82c9 !important;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="color: #2c82c9 !important;"  asp-area="" asp-controller="Empresa" asp-action="Listar">Empresa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="color: #2c82c9 !important;" asp-area="" asp-controller="Transacao" asp-action="Listar">Transação</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-primary text-white">
        <div class="container-fluid">
            &copy; System (v1.0.0) 2025 @(DateTime.Now.Year > 2025 ? $"á {DateTime.Now.Year}" : "")
            @* <span class="float-end text-black bg-white" style="padding-left: 4px; padding-right: 4px;">
                Developer by &nbsp;
                <a href="https://br.linkedin.com/in/fl%C3%A1vio-couto-123578237?trk=people-guest_people_search-card" target="_blank">
                    <img src="https://cdn-icons-png.flaticon.com/512/174/174857.png" alt="LinkedIn" width="24" height="24">
                </a>
            </span> *@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/componentsjs/funcoesdataextensions.js"></script>
    <script src="~/componentsjs/funcoesvalorextensions.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
